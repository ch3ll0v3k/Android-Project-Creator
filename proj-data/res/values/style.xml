<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- .............................................................. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:activatedBackgroundIndicator">@drawable/menu_main</item>
        <item name="android:homeAsUpIndicator">@drawable/menu_settings</item>
        <item name="android:actionBarDivider">@null</item>

    </style>

    <!-- .............................................................. -->
    <!-- APP Theme which extends Theme App Compact - ->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>

        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>

        <item name="actionBarDivider">@null</item>

        <!- - OverFlow Menu Text Color - ->
        <item name="android:textColor">#FF0000</item>
        </style>

        <!- - Set Custom Icon for Overflow Button in ActionBar - ->
        <style name="OverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
        </style>

        <!- - OverFlow menu Styles - ->
        <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">#FF0000</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">#33B5E5</item>
    </style>
    -->

    <!-- .............................................................. -->
    <style name="deff_btn">

        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        
        <item name="android:background">#000</item>

        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#666</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>

    </style>

    <!-- .............................................................. -->
    <style name="section_name">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">2dp</item>

        <item name="android:textColor">#0F0</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>

    </style>

    <!-- .............................................................. -->
    <style name="deff_num_input">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">2dp</item>

        <item name="android:textColor">#0f0</item>
        <item name="android:background">#fff</item>
        <item name="android:inputType">number</item>

    </style>
    <!-- .............................................................. -->
    <style name="deff_pwd_input">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">2dp</item>

        <item name="android:textColor">#fff</item>
        <item name="android:background">#333</item>
        <item name="android:inputType">numberPassword</item> 

    </style>
